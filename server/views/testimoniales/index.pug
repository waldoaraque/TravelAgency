extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5= page

        .row
            .col-md-12
                include ../layout/partials/testimoniales
            .col-md-12
                h2 Agrega un Testimonial 
                if(errors)
                    each error in errors 
                        .alert.alert-danger.text-center=error.mensaje 
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", class="form-control", type="text", placeholder="Tu nombre", name="nombre", value=nombre)
                            .form-group
                                label(for="correo") Correo Electr√≥nico: 
                                input(id="correo", class="form-control", type="email", placeholder="Tu correo", name="correo", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="10", class="form-control", placeholder="Tu mensaje")= mensaje 
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")